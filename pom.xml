		<url>https://github.com/MinELenI/CBSviewer</url>
		<connection>scm:git:git@github.com:git://github.com/MinELenI/CBSviewer.git</connection>
		<developerConnection>scm:git:git@github.com:git@github.com:MinELenI/CBSviewer.git</developerConnection>
		<tag>master</tag>
	</scm>
	<ciManagement>
		<system>Jenkins</system>
		<url>http://gisdemo.agro.nl/jenkins/job/CBS-viewer/</url>
		<notifiers />
