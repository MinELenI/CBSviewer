	<prerequisites>
		<maven>3.0.4</maven>
	</prerequisites>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<geotools.version>9.0-RC1</geotools.version>
		<proj.finalname>${project.artifactId}</proj.finalname>
		<jdk.version>1.7</jdk.version>
		<github.username />
		<github.password />
		<skipTests>false</skipTests>
		<github.site.dryRun>false</github.site.dryRun>
		<http.proxyHost />
		<http.proxyPort>0</http.proxyPort>
		<debug>false</debug>
		<!-- @see https://code.google.com/p/phantomjs/downloads/list -->
		<phantomjs.baseurl>https://phantomjs.googlecode.com/files</phantomjs.baseurl>
		<!-- @see https://github.com/pivotal/jasmine/downloads -->
		<jasmine.baseurl>http://cloud.github.com/downloads/pivotal/jasmine</jasmine.baseurl>
		<jasmine.archive>jasmine-standalone-1.3.1.zip</jasmine.archive>
		<sass.OutputStyle>:compressed</sass.OutputStyle>
	</properties>
	<profiles>
		<profile>
			<id>developer</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<debug>true</debug>
				<sass.OutputStyle>:expanded</sass.OutputStyle>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.mortbay.jetty</groupId>
						<artifactId>jetty-maven-plugin</artifactId>
						<version>8.1.7.v20120910</version>
						<configuration>
							<connectors>
								<connector implementation="org.eclipse.jetty.server.bio.SocketConnector">
									<port>8020</port>
									<maxIdleTime>60000</maxIdleTime>
								</connector>
							</connectors>
							<webAppConfig>
								<baseResource implementation="org.eclipse.jetty.util.resource.ResourceCollection">
									<resourcesAsCSV>src/main/webapp,target/cbsviewer</resourcesAsCSV>
								</baseResource>
								<sessionHandler implementation="org.eclipse.jetty.server.session.SessionHandler">
									<sessionManager implementation="org.eclipse.jetty.server.session.HashSessionManager">
										<usingCookies>false</usingCookies>
									</sessionManager>
								</sessionHandler>
							</webAppConfig>
							<reload>manual</reload>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>windows</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<properties>
				<phantomjs.archive>phantomjs-1.8.2-windows.zip</phantomjs.archive>
				<phantomjs.executable>phantomjs.exe</phantomjs.executable>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<execution>
								<id>prepare PhantomJS</id>
								<phase>process-test-sources</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<setproxy proxyhost="${http.proxyHost}" proxyport="${http.proxyPort}" />
										<mkdir dir="${basedir}/cache/" />
										<mkdir dir="${basedir}/target/test-js/" />
										<get src="${phantomjs.baseurl}/${phantomjs.archive}" dest="${basedir}/cache/" usetimestamp="true" />
										<unzip src="${basedir}/cache/${phantomjs.archive}" dest="${basedir}/target/test-js/">
											<patternset>
												<include name="**/${phantomjs.executable}" />
											</patternset>
											<mapper type="flatten" />
										</unzip>
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>unix</id>
			<activation>
				<os>
					<family>unix</family>
					<!-- get name by running "mvn help:system |grep os.name" -->
					<name>Linux</name>
				</os>
			</activation>
			<properties>
				<!--<phantomjs.archive>phantomjs-1.8.2-linux-i686.tar.bz2</phantomjs.archive>-->
				<phantomjs.archive>phantomjs-1.8.2-linux-x86_64.tar.bz2</phantomjs.archive>
				<phantomjs.executable>phantomjs</phantomjs.executable>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<execution>
								<id>prepare PhantomJS</id>
								<phase>process-test-sources</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<setproxy proxyhost="${http.proxyHost}" proxyport="${http.proxyPort}" />
										<mkdir dir="${basedir}/cache/" />
										<mkdir dir="${basedir}/target/test-js/" />
										<get src="${phantomjs.baseurl}/${phantomjs.archive}" dest="${basedir}/cache/" usetimestamp="true" />
										<bunzip2 src="${basedir}/cache/${phantomjs.archive}" dest="${basedir}/cache/phantomjs.tar" />
										<untar src="${basedir}/cache/phantomjs.tar" dest="${basedir}/target/test-js/">
											<patternset>
												<include name="**/${phantomjs.executable}" />
											</patternset>
											<mapper type="flatten" />
										</untar>
										<chmod file="${basedir}/target/test-js/${phantomjs.executable}" perm="ugo+rx" verbose="true" />
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>mac</id>
			<activation>
				<os>
					<family>mac</family>
				</os>
			</activation>
			<properties>
				<phantomjs.archive>phantomjs-1.8.2-macosx.zip</phantomjs.archive>
				<phantomjs.executable>phantomjs</phantomjs.executable>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<execution>
								<id>prepare PhantomJS</id>
								<phase>process-test-sources</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<setproxy proxyhost="${http.proxyHost}" proxyport="${http.proxyPort}" />
										<mkdir dir="${basedir}/cache/" />
										<mkdir dir="${basedir}/target/test-js/" />
										<get src="${phantomjs.baseurl}/${phantomjs.archive}" dest="${basedir}/cache/" usetimestamp="true" />
										<unzip src="${basedir}/cache/${phantomjs.archive}" dest="${basedir}/target/test-js/">
											<patternset>
												<include name="**/${phantomjs.executable}" />
											</patternset>
											<mapper type="flatten" />
										</unzip>
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<!-- specify this profile to build openlayers as part of the build, ie. 
				-Popenlayers -->
			<id>openlayers</id>
			<properties>
				<openlayers.checkout.url>scm:git:https://github.com/openlayers/openlayers.git</openlayers.checkout.url>
				<!-- tag, branch, ... -->
				<openlayers.checkout.versiontype>branch</openlayers.checkout.versiontype>
				<openlayers.checkout.version>master</openlayers.checkout.version>
				<!-- this can be any other OL build compressor or none -->
				<openlayers.compress.build>closure</openlayers.compress.build>
			</properties>
			<build>
				<defaultGoal>process-test-classes</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-scm-plugin</artifactId>
						<version>1.8.1</version>
						<executions>
							<execution>
								<id>getOpenLayers</id>
								<phase>initialize</phase>
								<goals>
									<goal>checkout</goal>
								</goals>
								<configuration>
									<connectionUrl>${openlayers.checkout.url}</connectionUrl>
									<checkoutDirectory>${project.build.directory}/OLcheckout</checkoutDirectory>
									<scmVersion>${openlayers.checkout.version}</scmVersion>
									<scmVersionType>${openlayers.checkout.versiontype}</scmVersionType>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.2.1</version>
						<executions>
							<execution>
								<id>buildOpenLayers</id>
								<goals>
									<goal>exec</goal>
								</goals>
								<phase>process-sources</phase>
								<configuration>
									<!-- note: a python executable needs to be in the path -->
									<executable>python</executable>
									<workingDirectory>${project.build.directory}/OLcheckout/build</workingDirectory>
									<arguments>
										<argument>build.py</argument>
										<argument>-c</argument>
										<argument>${openlayers.compress.build}</argument>
										<argument>${basedir}/OL-build.cfg</argument>
									</arguments>
								</configuration>
							</execution>
							<execution>
								<id>buildOpenLayers-test</id>
								<goals>
									<goal>exec</goal>
								</goals>
								<phase>generate-test-sources</phase>
								<configuration>
									<!-- note: a python executable needs to be in the path -->
									<executable>python</executable>
									<workingDirectory>${project.build.directory}/OLcheckout/build</workingDirectory>
									<arguments>
										<argument>buildUncompressed.py</argument>
										<argument>full</argument>
										<argument>OpenLayers-test.js</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<execution>
								<id>prepareOpenLayers</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<setproxy proxyhost="${http.proxyHost}" proxyport="${http.proxyPort}" />
										<mkdir dir="${basedir}/cache" />
										<get src="https://closure-compiler.googlecode.com/files/compiler-latest.zip" dest="${basedir}/cache/" usetimestamp="true" />
										<unzip src="${basedir}/cache/compiler-latest.zip" dest="${basedir}/target">
											<patternset>
												<include name="**/compiler.jar" />
											</patternset>
										</unzip>
										<copy file="${basedir}/target/compiler.jar" tofile="${project.build.directory}/OLcheckout/tools/closure-compiler.jar" overwrite="true" />
									</target>
								</configuration>
							</execution>
							<execution>
								<id>copyOpenLayers</id>
								<phase>process-classes</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<!-- copy files into build -->
									<target>
										<copy file="${project.build.directory}/OLcheckout/build/OpenLayers.js" tofile="src/main/webapp/lib/OpenLayers.js" />
									</target>
								</configuration>
							</execution>
							<execution>
								<id>copyOpenLayers-test</id>
								<phase>process-test-sources</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<copy file="${project.build.directory}/OLcheckout/build/OpenLayers-test.js" tofile="src/test/js/lib/OpenLayers-test.js" />
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>jenkins</id>
			<properties>
				<github.global.server>github</github.global.server>
			</properties>
		</profile>
		<profile>
			<id>jasmineserver</id>
			<build>
				<defaultGoal>jasmine:bdd</defaultGoal>
				<plugins>
					<plugin>
						<groupId>com.github.searls</groupId>
						<artifactId>jasmine-maven-plugin</artifactId>
						<version>1.2.0.0</version>
						<extensions>true</extensions>
						<executions>
							<execution>
								<goals>
									<goal>bdd</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<browserVersion>FIREFOX_3_6</browserVersion>
							<preloadSources>
								<source>src/main/webapp/lib/jquery-1.9.1.min.js</source>
								<source>src/main/webapp/lib/jquery-ui-1.10.1.custom.min.js</source>
								<source>src/test/js/lib/OpenLayers-test.js</source>
								<source>src/test/js/lib/jasmin_util.js</source>
								<source>src/main/webapp/js/config.js</source>
							</preloadSources>
							<jsSrcDir>src/main/js</jsSrcDir>
							<jsTestSrcDir>src/test/js/jasmine</jsTestSrcDir>
							<haltOnFailure>false</haltOnFailure>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<build>
		<finalName>${proj.finalname}</finalName>
		<defaultGoal>install</defaultGoal>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<pushChanges>false</pushChanges>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<version>1.2</version>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<doCheck>false</doCheck>
					<doUpdate>false</doUpdate>
					<timestampFormat>{0,date,yyyy-MM-dd HH:mm}</timestampFormat>
					<shortRevisionLength>10</shortRevisionLength>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxb2-maven-plugin</artifactId>
				<version>1.5</version>
				<executions>
					<execution>
						<id>xjc</id>
						<goals>
							<goal>xjc</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<verbose>${debug}</verbose>
					<includeSchemasOutputPath>.</includeSchemasOutputPath>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<debug>${debug}</debug>
					<optimize>!${debug}</optimize>
					<source>${jdk.version}</source>
					<target>${jdk.version}</target>
					<showDeprecation>${debug}</showDeprecation>
					<showWarnings>${debug}</showWarnings>
					<verbose>${debug}</verbose>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jasig.maven</groupId>
				<artifactId>sass-maven-plugin</artifactId>
				<version>1.0.2</version>
				<executions>
					<execution>
						<phase>process-sources</phase>
						<goals>
							<goal>update-stylesheets</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<baseOutputDirectory>${project.build.directory}/${project.build.finalName}/css</baseOutputDirectory>
					<sassSourceDirectory>${basedir}/src/main/sass</sassSourceDirectory>
					<sassOptions>
						<always_update>true</always_update>
						<style>${sass.OutputStyle}</style>
						<debug_info>${debug}</debug_info>
					</sassOptions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.13</version>
				<configuration>
					<excludes>
						<exclude>**/*IntegrationTest.java</exclude>
					</excludes>
					<!-- work around voor java 7. see: 
					http://stackoverflow.com/questions/10869127/maven-build-causes-verifyerror-with-java-1-7
					-->
					<argLine>-XX:-UseSplitVerifier</argLine>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<!--gebruik 2.12.4 zie: http://jira.codehaus.org/browse/SUREFIRE-950 -->
				<version>2.12.4</version>
				<configuration>
					<includes>
						<include>**/*IntegrationTest.java</include>
					</includes>
					<testFailureIgnore>true</testFailureIgnore>
					<argLine>-XX:-UseSplitVerifier</argLine>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>integration-test</goal>
							<goal>verify</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<warSourceExcludes>**/*.html,**/*.psd,**/css/*.css,**/js/*.js</warSourceExcludes>
					<archive>
						<forced>true</forced>
						<index>true</index>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
							<addClasspath>true</addClasspath>
						</manifest>
						<manifestEntries>
							<Implementation-Build>branch: ${scmBranch} rev: ${buildNumber} timestamp: ${timestamp}</Implementation-Build>
							<SCM-Revision>${buildNumber}</SCM-Revision>
							<url>${project.url}</url>
							<release>${project.version}</release>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>net.alchim31.maven</groupId>
				<artifactId>yuicompressor-maven-plugin</artifactId>
				<version>1.3.2</version>
				<executions>
					<execution>
						<phase>process-classes</phase>
						<goals>
							<goal>compress</goal>
						</goals>
						<configuration>
							<force>true</force>
							<nosuffix>true</nosuffix>
							<failOnWarning>false</failOnWarning>
							<nocompress>${debug}</nocompress>
							<jswarn>${debug}</jswarn>
							<sourceDirectory>src/main/js</sourceDirectory>
							<excludes>
								<exclude>**/lib/*.min.js</exclude>
								<exclude>**/*.min.css</exclude>
								<exclude>**/lib/OpenLayers.js</exclude>
							</excludes>
							<outputDirectory>${project.build.directory}/${project.build.finalName}/js</outputDirectory>
							<aggregations>
								<aggregation>
									<includes>
										<include>**/KeyboardPoint.js</include>
										<include>**/KeyboardClick.js</include>
										<include>**/WMSGetFeatureInfo.js</include>
										<include>**/UpdateLegendControl.js</include>
